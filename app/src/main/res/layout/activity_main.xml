<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chahatgoel.connnectme.MainActivity"
    >


    <GridLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/gridLayout"

        android:layout_alignParentEnd="true"
        android:background="@drawable/board"
        android:rowCount="3" android:columnCount="3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

    <ImageView android:layout_height="90dp"
        android:layout_width="90dp"
        android:id="@+id/imageView"
        android:tag="0"


        android:onClick="dropIn"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="0"/>

    <ImageView


        android:layout_height="90dp"
        android:layout_width="90dp"
        android:id="@+id/imageView2"
        android:tag="1"

        android:onClick="dropIn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="53dp" android:layout_column="1" android:layout_row="0"/>

    <ImageView


        android:layout_height="90dp"
        android:layout_width="90dp" android:id="@+id/imageView3"
        android:tag="2" android:onClick="dropIn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="53dp" android:layout_column="2" android:layout_row="0"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp"
        android:id="@+id/imageView4"
        android:tag="3"
        android:onClick="dropIn"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="1"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp" android:id="@+id/imageView5"
        android:tag="4" android:onClick="dropIn"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="53dp"
        android:layout_column="1" android:layout_row="1"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp" android:id="@+id/imageView6"
        android:tag="5" android:onClick="dropIn"
        android:layout_marginTop="150dp" android:layout_marginLeft="53dp" android:layout_column="2" android:layout_row="1"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp"
        android:id="@+id/imageView7"
        android:tag="6"
        android:onClick="dropIn"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp" android:layout_column="0" android:layout_row="2"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp" android:id="@+id/imageView8"
        android:tag="7" android:onClick="dropIn"
        android:layout_marginTop="140dp" android:layout_marginLeft="55dp" android:layout_column="1" android:layout_row="2"/>

    <ImageView

        android:layout_height="90dp"
        android:layout_width="90dp" android:id="@+id/imageView9"
        android:tag="8" android:onClick="dropIn"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="53dp" android:layout_column="2" android:layout_row="2"/>

</GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/playAgainLayout"
        android:visibility="invisible"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/playAgain"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"


            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:onClick="playAgain"
            android:scaleType="fitCenter"
            android:src="@drawable/play"
            android:text="PLAY AGAIN"


            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

      <ImageButton
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@drawable/cross1"
          android:scaleType="fitCenter"
          android:layout_marginLeft="20dp"


          android:layout_marginTop="273dp"
          android:onClick="exit"
          android:id="@+id/btn"/>
    </LinearLayout>





</RelativeLayout>